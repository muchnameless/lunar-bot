{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:base",
		"helpers:pinGitHubActionDigests",
		":semanticCommitTypeAll(chore)"
	],
	"labels": [
		"Meta: Dependencies"
	],
	"npm": {
		"rangeStrategy": "bump",
		"packageRules": [
			{
				"matchUpdateTypes": [
					"minor",
					"patch",
					"pin",
					"digest"
				],
				"matchCurrentVersion": "!/^0/",
				"automerge": true
			},
			{
				"matchDepTypes": ["engines"],
				"enabled": false
			}
		]
	},
	"lockFileMaintenance": {
		"enabled": true,
		"automerge": true
	}
}