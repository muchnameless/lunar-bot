{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:base", ":disableRateLimiting", ":semanticCommitTypeAll(chore)", "default:automergeDigest"],
	"postUpdateOptions": ["pnpmDedupe"],
	"postUpgradeTasks": {
		"commands": ["pnpx nolyfill install"]
	},
	"labels": ["dependencies"],
	"npm": {
		"rangeStrategy": "bump",
		"packageRules": [
			{
				"matchUpdateTypes": ["minor", "patch", "pin", "digest"],
				"matchCurrentVersion": "!/^0/",
				"automerge": true
			},
			{
				"matchPackagePatterns": ["^@discordjs"],
				"matchPackageNames": ["discord.js"],
				"followTag": "dev",
				"groupName": "discord.js",
				"automerge": true
			},
			{
				"matchPackagePatterns": ["^@sapphire"],
				"matchPackageNames": ["discord-api-types"],
				"followTag": "next",
				"groupName": "sapphire",
				"automerge": true
			},
			{
				"matchPackageNames": ["node"],
				"ignoreUnstable": false
			}
		]
	},
	"github-actions": {
		"pinDigests": true,
		"automerge": true
	},
	"lockFileMaintenance": {
		"enabled": true,
		"automerge": true
	}
}
